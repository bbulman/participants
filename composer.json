{
    "name": "workshop-io/participant",
    "description": "Workshop.io Participant - Mobile-first PWA for workshop attendees",
    "type": "project",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "WorkshopParticipant\\": "src/",
            "WorkshopParticipant\\Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WorkshopParticipant\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit tests/unit",
        "test-integration": "phpunit tests/integration",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "optimize-autoloader": true
    }
}